%h1 New Event 
= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@playlist.errors.count, "error")} prohibited this playlist from being saved:"
      %ul
        - @playlist.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :date
    = f.date_select :date
 .field
    = f.label :time
    = f.time_select :time
 .field
    = f.label :time_zone
    = f.time_zone_select :timezone
 .field
    = f.label :latitude
    = f.text_field :latitude
 .field
    = f.label :longitude
    = f.text_field :longitude
 .field
    = f.label :message
    = f.text_field :message

  .actions
    = f.submit 'Save'
